# Device specific


## Display configuration 
monitor=DP-1,2560x1440@120,0x0,1 
monitor=HDMI-A-1,1920x1200@60,2560x+160,1

#exec-once = $HOME/.config/hypr/devicespecific/set_monitor.sh

## Assigning workspaces to monitors
workspace = 1, monitor:DP-1, default:true
workspace = 10, monitor:HDMI-A-1, default:true

## Focusing workspace 1
exec-once = hyprctl dispatch workspace 1

## Setting wallpaper
exec-once = swaybg  -o DP-1 -m fill -i $HOME/Pictures/wallpapers/Neighborhood.png
exec-once = swaybg  -o LVDS-1 -m fill -i $HOME/Pictures/wallpapers/Neighborhood.png
exec-once = swaybg -o HDMI-A-1 -m fill -i $HOME/Pictures/wallpapers/RanchoNight.png

animations {
    ### Enable Animation
    enabled = true
}
## Window Decoration
decoration {
    ### Inactive windows are slightly transparent
   inactive_opacity = 1
   rounding = 5
}

# exec-once = hyprpaper -c ~/.config/hypr/devicespecific/hyprpaper.conf

## Flipping 2nd Monitor
# exec-once = wlr-randr --output DP-2 --transform 90

## Starting Polkit
exec-once = /usr/lib/mate-polkit/polkit-mate-authentication-agent-1 &

## Mouse settings
device {
    name = logitech-g502-hero-gaming-mouse
    accel_profile = flat
    sensitivity = -0.8
}
